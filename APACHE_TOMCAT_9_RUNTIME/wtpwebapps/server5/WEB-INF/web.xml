<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>server5</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>admin</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>admin</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>jdbc:sqlite:</param-value>
  </context-param>
  <context-param>
    <param-name>dbRelative</param-name>
    <param-value>WEB-INF/classes/COMICS.db</param-value>
  </context-param>
  
  <!-- dbUrl
  <param-value>jdbc:sqlite:${catalina.base}/wtpwebapps/server5/WEB-INF/classes/COMICS.db</param-value> 
   -->
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/AppErrorHandler</location>
  </error-page>
</web-app>